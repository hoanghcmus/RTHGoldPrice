<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/_20">

    <LinearLayout
        android:id="@+id/ll_my_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_24"
            android:layout_height="@dimen/_24"
            android:layout_marginRight="@dimen/_10"
            android:src="@drawable/ic_user" />

        <TextView
            android:id="@+id/txt_my_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/item_menu_my_profile"
            android:textColor="@android:color/black"
            android:textSize="@dimen/t_18" />

    </LinearLayout>

</RelativeLayout>