<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/_10">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_avatar"
        android:layout_width="@dimen/_100"
        android:layout_height="@dimen/_100"
        android:layout_marginTop="@dimen/_9"
        android:src="@drawable/avatar" />

    <TextView
        android:id="@+id/txt_full_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20"
        android:gravity="center"
        android:text="@string/sample_text"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/t_18"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5"
        android:gravity="center"
        android:text="@string/sample_text"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/t_18" />

    <Button
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/_30"
        android:background="@android:color/transparent"
        android:text="@string/close"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/t_22"
        android:textStyle="bold" />

</LinearLayout>